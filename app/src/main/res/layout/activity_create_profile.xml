<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".CreateProfile">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Profile"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="75dp"
        android:layout_marginBottom="30dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/iv_cp"
            android:clickable="true"
            android:background="@drawable/ic_baseline_person_24"
            android:scaleType="fitCenter"/>

    </androidx.cardview.widget.CardView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_name_cp"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:paddingStart="5dp"
        android:drawablePadding="4dp"
        android:hint="Name"
        android:layout_margin="4dp"
        android:textColor="@color/black"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_profession_cp"
        android:hint="Profession"
        android:drawableStart="@drawable/ic_baseline_work_24"
        android:paddingStart="5dp"
        android:drawablePadding="4dp"
        android:layout_margin="4dp"
        android:textColor="@color/black"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_bio_cp"
        android:hint="Bio"
        android:drawableStart="@drawable/ic_baseline_emoji_people_24"
        android:paddingStart="5dp"
        android:drawablePadding="4dp"
        android:layout_margin="4dp"
        android:textColor="@color/black"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_email_cp"
        android:hint="E-mail"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:paddingStart="5dp"
        android:drawablePadding="4dp"
        android:layout_margin="4dp"
        android:textColor="@color/black"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_web_cp"
        android:hint="Website"
        android:layout_margin="4dp"
        android:drawableStart="@drawable/ic_baseline_public_24"
        android:paddingStart="5dp"
        android:drawablePadding="4dp"
        android:textColor="@color/black"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_cp"
        android:text="Save Profile"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_red_dark"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_margin="10dp"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressbar_cp"
        android:visibility="invisible"
        android:layout_marginTop="10dp"/>




</LinearLayout>