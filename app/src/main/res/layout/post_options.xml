<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Download"
        android:id="@+id/download_tv_post"
        android:textSize="20sp"
        android:drawableStart="@drawable/ic_baseline_arrow_downward_24"
        android:clickable="true"
        android:drawablePadding="4dp"
        android:padding="4dp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Post"
        android:id="@+id/edit_post"
        android:textSize="20sp"
        android:drawableStart="@drawable/edit_post"
        android:clickable="true"
        android:drawablePadding="4dp"
        android:padding="4dp"
        android:textColor="@android:color/black"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Caption...."
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        android:id="@+id/et_caption"
        android:layout_marginStart="9dp"
        android:layout_margin="2dp"
        android:visibility="gone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/btn_edit_caption"
        android:text="Update"
        android:background="@drawable/button_back"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:layout_margin="4dp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share"
        android:drawableStart="@drawable/ic_baseline_share_24"
        android:id="@+id/share_tv_post"
        android:textSize="20sp"
        android:drawablePadding="4dp"
        android:clickable="true"
        android:padding="4dp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copy Url"
        android:id="@+id/copyurl_tv_post"
        android:textSize="20sp"
        android:drawableStart="@drawable/ic_baseline_link_24"
        android:drawablePadding="4dp"
        android:clickable="true"
        android:padding="4dp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/delete_tv_post"
        android:textSize="20sp"
        android:drawableStart="@drawable/delete_red"
        android:drawablePadding="5dp"
        android:visibility="visible"
        android:clickable="true"
        android:padding="4dp"
        android:textColor="@color/start"
        />

</LinearLayout>