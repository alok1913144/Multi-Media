<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".UpdateProfile">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Profile"
        android:textColor="@color/red"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_name_up"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:paddingStart="5dp"
        android:drawablePadding="4dp"
        android:hint="Name"
        android:layout_margin="4dp"
        android:textColor="@android:color/darker_gray"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_profession_up"
        android:hint="Profession"
        android:drawableStart="@drawable/ic_baseline_work_24"
        android:paddingStart="5dp"
        android:drawablePadding="4dp"
        android:layout_margin="4dp"
        android:textColor="@android:color/darker_gray"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_bio_up"
        android:hint="Bio"
        android:drawableStart="@drawable/ic_baseline_emoji_people_24"
        android:paddingStart="5dp"
        android:drawablePadding="4dp"
        android:layout_margin="4dp"
        android:textColor="@android:color/darker_gray"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_email_up"
        android:hint="E-mail"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:paddingStart="5dp"
        android:drawablePadding="4dp"
        android:layout_margin="4dp"
        android:textColor="@android:color/darker_gray"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_web_up"
        android:hint="Website"
        android:layout_margin="4dp"
        android:drawableStart="@drawable/ic_baseline_public_24"
        android:paddingStart="5dp"
        android:drawablePadding="4dp"
        android:textColor="@android:color/darker_gray"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_up"
        android:text="Save Profile"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_red_dark"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_margin="10dp"/>


</LinearLayout>